<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>0</zorder>
	<controls>
		<control type="group">
			<animation effect="slide" end="0,120" time="300" tween="quadratic" condition="Skin.HasSetting(Disable.VideoLyrics) + Window.IsActive(musicosd)">Conditional</animation>
			<control type="image">
				<top>-200</top>
				<width>100%</width>
				<height>900</height>
				<texture flipy="true" border="1">nowplaying_shadow.png</texture>
				<visible>Skin.HasSetting(Disable.VideoLyrics)</visible>
			</control>
			<control type="list" id="110">
				<left>45</left>
				<top>45</top>
				<width>1830</width>
				<height>500</height>
				<onleft>PlayerControl(previous)</onleft>
				<onright>PlayerControl(next)</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>101</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="100">
					<include condition="Skin.HasSetting(Disable.VideoLyrics)">NormalLyrics</include>
				</itemlayout>
				<focusedlayout height="100">
					<include condition="Skin.HasSetting(Disable.VideoLyrics)" content="NormalLyrics">
						<param name="textcolor">$VAR[ThemeLabelColor]</param>
					</include>
				</focusedlayout>
			</control>
			<control type="label">
				<left>870</left>
				<top>1020</top>
				<width>825</width>
				<height>45</height>
				<label>$LOCALIZE[31205] - $INFO[Control.GetLabel(200)]</label>
				<font>font12_title</font>
				<align>right</align>
				<textcolor>grey2</textcolor>
				<visible>false</visible>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
		</control>
		<include condition="!Skin.HasSetting(Disable.VideoLyrics)">VideoLyrics</include>
		<control type="group">
			<animation effect="slide" end="0,0" start="0,-540" delay="100" time="200" tween="quadratic" easing="out">WindowOpen</animation>
			<control type="image">
				<width>100%</width>
				<height>540</height>
				<texture border="1,1,1,40">topbar.png</texture>
				<visible>Control.IsVisible(120)</visible>
				<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			</control>
			<control type="list" id="120">
				<left>45</left>
				<top>45</top>
				<width>1830</width>
				<height>450</height>
				<onup>120</onup>
				<ondown>120</ondown>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="60" width="1282">
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="1282">
					<control type="image">
						<left>1</left>
						<width>630</width>
						<height>60</height>
						<texture colordiffuse="$VAR[HighlightBarColor]" border="5">listselect_fo.png</texture>
						<visible>Control.HasFocus(120)</visible>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(120)">Conditional</animation>
					</control>
					<control type="label">
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey</textcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(120)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>