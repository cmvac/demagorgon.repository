<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
	<zorder>5</zorder>
	<visible>!Skin.HasSetting(Enable.ScreenshotMode)</visible>
	<visible>![Player.Paused + Window.IsActive(1134) + !Skin.HasSetting(Disable.Netflix.Pause)]</visible>
	<visible>[Window.IsVisible(videoosd) | [Window.IsVisible(fullscreeninfo) + !VideoPlayer.Content(LiveTV)] | [Window.IsActive(fullscreeninfo) + VideoPlayer.Content(LiveTV)] | Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.Caching] + VideoPlayer.IsFullscreen</visible>
	<controls>
		<control type="group">
			<visible>!VideoPlayer.Content(LiveTV)</visible>
			<control type="group">
				<top>1014</top>
				<animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
				<animation effect="fade" end="0" start="100" time="200">WindowClose</animation>
				<control type="group">
					<animation effect="slide" end="0,-90" time="240" tween="quadratic" condition="Window.IsActive(videoosd)">Conditional</animation>
					<animation effect="slide" end="0,90" time="240" tween="quadratic" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVROSDTeletext) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(subtitlesearch) | Window.IsVisible(1115)">Conditional</animation>
					<control type="image">
						<top>25</top>
						<width>2100</width>
						<height>130</height>
						<texture>osd/texturebg.png</texture>
					</control>
					<control type="image">
						<width>100%</width>
						<height>130</height>
						<texture border="1,32,1,1">bottombar.png</texture>
					</control>
				</control>
				<!-- <control type="image">
					<width>100%</width>
					<height>40</height>
					<texture border="1,32,1,1">bottombar.png</texture>
				</control> -->
				<control type="progress">
					<top>25</top>
					<width>100%</width>
					<height>40</height>
					<texturebg border="2">osd/texturebg.png</texturebg>
					<lefttexture />
					<midtexture border="2">osd/midtexture_cache.png</midtexture>
					<righttexture />
					<overlaytexture />
					<info>Player.ProgressCache</info>
				</control>
				<control type="progress">
					<top>25</top>
					<width>100%</width>
					<height>36</height>
					<texturebg border="1">osd/texturebg_cache.png</texturebg>
					<lefttexture />
					<midtexture colordiffuse="$VAR[ThemeOSDProgressColor]" border="2">osd/midtexture.png</midtexture>
					<righttexture />
					<overlaytexture />
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="401">
					<description>Seek Slider</description>
					<top>27</top>
					<width>100%</width>
					<height>22</height>
					<texturesliderbar>seekslider2.png</texturesliderbar>
					<textureslidernib colordiffuse="$VAR[ThemeOSDProgressColor]">slidernib_alt.png</textureslidernib>
					<textureslidernibfocus colordiffuse="$VAR[ThemeOSDProgressColor]">slidernib_alt.png</textureslidernibfocus>
					<visible>Player.Seeking</visible>
				</control>
				<control type="label">
					<top>24</top>
					<width>830</width>
					<height>90</height>
					<font>font14_title</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<shadowcolor>shadow</shadowcolor>
					<aligny>top</aligny>
					<textoffsety>-2</textoffsety>
					<label>$VAR[PlayerTitleLabelVar]</label>
					<scroll>true</scroll>
					<animation effect="fade" start="100" end="50" time="240" condition="Player.Seeking">Conditional</animation>
				</control>
				<control type="label">
					<top>24</top>
					<width>100%</width>
					<height>90</height>
					<font>font14_title</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<shadowcolor>shadow</shadowcolor>
					<align>center</align>
					<aligny>top</aligny>
					<textoffsety>-2</textoffsety>
					<label>$VAR[SeekLabelVar]</label>
				</control>
				<control type="label">
					<top>24</top>
					<left>1020</left>
					<width>900</width>
					<height>90</height>
					<font>font14_title</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<shadowcolor>shadow</shadowcolor>
					<align>right</align>
					<aligny>top</aligny>
					<textoffsety>-2</textoffsety>
					<label>$VAR[OSDRightLabelVar]</label>
					<animation effect="fade" start="100" end="50" time="240" condition="Player.Seeking">Conditional</animation>
				</control>
				<control type="image">
					<left>1460</left>
					<top>-240</top>
					<width>450</width>
					<height>260</height>
					<aspectratio aligny="bottom" align="center">keep</aspectratio>
					<texture background="true">$VAR[PlayerArtworkVar]</texture>
					<visible>![Window.IsActive(DialogSettings.xml) | Window.IsActive(subtitlesearch) | Window.IsActive(1115)]</visible>
					<animation effect="slide" end="0,-90" time="240" tween="quadratic" condition="Window.IsActive(videoosd)">Conditional</animation>
				</control>
			</control>
			<control type="group">
				<animation type="WindowOpen" reversible="false">
					<effect type="fade" start="0" end="100" time="500" />
				</animation>
				<animation type="WindowClose" reversible="false">
					<effect type="fade" start="100" end="0" time="0" />
				</animation>
				<animation type="VisibleChange" reversible="false">
					<effect type="fade" start="0" end="100" time="500" />
				</animation>
				<control type="group">
					<left>867</left>
					<top>410</top>
					<visible>Player.Paused + !Window.IsActive(subtitlesearch) + !Skin.HasSetting(PausedLabel)</visible>
					<control type="image">
						<width>186</width>
						<height>186</height>
						<texture>osd/bg_play_large.png</texture>
					</control>
					<control type="image">
						<width>186</width>
						<height>186</height>
						<texture>osd/btn_pause.png</texture>
					</control>
				</control>
				<control type="label">
					<top>-70</top>
					<width>1920</width>
					<align>center</align>
					<label>[UPPERCASE][B]$LOCALIZE[112][/B][/UPPERCASE]</label>
					<font>BigAssTimeFont</font>
					<textcolor>66FFFFFF</textcolor>
					<visible>Player.Paused + !Window.IsActive(subtitlesearch) + Skin.HasSetting(PausedLabel)</visible>
				</control>
			</control>
		</control>
		<control type="grouplist">
			<left>30</left>
			<top>120</top>
			<width>748</width>
			<height>150</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<include>VisibleFadeAnimation</include>
			<visible>Player.Forwarding | Player.Rewinding</visible>
			<usecontrolcoords>true</usecontrolcoords>
			<control type="image">
				<top>3</top>
				<width>90</width>
				<height>87</height>
				<aspectratio>keep</aspectratio>
				<texture flipx="true">osd/ff.png</texture>
				<colordiffuse>FFe5e5e5</colordiffuse>
				<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
				<visible>Player.Rewinding</visible>
			</control>
			<control type="label">
				<label>$VAR[VideoPlayerForwardRewindVar]</label>
				<width min="10" max="300">auto</width>
				<height>90</height>
				<textoffsetx>0</textoffsetx>
				<font>font_MainMenu</font>
				<shadowcolor>44000000</shadowcolor>
				<textcolor>DDe5e5e5</textcolor>
			</control>
			<control type="image">
				<top>3</top>
				<width>90</width>
				<height>87</height>
				<aspectratio>keep</aspectratio>
				<texture>osd/ff.png</texture>
				<colordiffuse>FFe5e5e5</colordiffuse>
				<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
				<visible>Player.Forwarding</visible>
			</control>
		</control>
		<include condition="VideoPlayer.Content(LiveTV)">FullScreenInfoBarLiveTV</include>
	</controls>
</window>