<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- BannerWall -->
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<animation effect="slide" start="0" end="0,-40" condition="Skin.HasSetting(Disable.BannerWallInfo)">Conditional</animation>
			<top>-10</top>
			<control type="image">
				<description>background image</description>
				<left>90</left>
				<top>992</top>
				<width>1740</width>
				<height>839</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<left>90</left>
				<top>89</top>
				<width>1740</width>
				<height>935</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="panel" id="58">
				<left>120</left>
				<top>120</top>
				<include condition="!Skin.HasSetting(Disable.BannerWallInfo)">BannerWallInfoWidth</include>
				<include condition="Skin.HasSetting(Disable.BannerWallInfo)">BannerWallNoInfoWidth</include>
				<height>880</height>
				<onleft condition="Control.IsVisible(80)">80</onleft>
				<onleft condition="!Control.IsVisible(80)">SetProperty(MediaMenu,True,Home)</onleft>
				<onleft condition="!Control.IsVisible(80)">SetFocus(9050)</onleft>
				<onright>95861</onright>
				<onup>58</onup>
				<ondown>58</ondown>
				<pagecontrol>80</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31088">wide</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="BAFFFFFF" background="true">$VAR[BannerThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>4</bordersize>
						<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>String.IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="BAFFFFFF" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="image">
							<top>5</top>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<left>506</left>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>4</bordersize>
						<visible>[!String.IsEmpty(Skin.String(58.Movies.DisableOverlay)) + Container.Content(movies)] | [!String.IsEmpty(Skin.String(58.TV.DisableOverlay)) + Container.Content(tvshows)]</visible>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout height="110" width="560">
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="300" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="300" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<bordertexture colordiffuse="$VAR[ThemeLabelColor]" border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
							<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<control type="group">
							<visible>String.IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>560</width>
								<height>110</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<bordertexture colordiffuse="$VAR[ThemeLabelColor]" border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<top>5</top>
								<width>300</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<bordersize>4</bordersize>
							</control>
						</control>
						<control type="image">
							<left>503</left>
							<top>3</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>4</bordersize>
							<visible>[!String.IsEmpty(Skin.String(58.Movies.DisableOverlay)) + Container.Content(movies)] | [!String.IsEmpty(Skin.String(58.TV.DisableOverlay)) + Container.Content(tvshows)]</visible>
						</control>
						<control type="group">
							<left>10</left>
							<top>10</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="80">
				<left>104</left>
				<top>179</top>
				<width>14</width>
				<height>900</height>
				<onup>80</onup>
				<ondown>80</ondown>
				<onright>50</onright>
				<onleft>SetProperty(MediaMenu,True,Home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(80) + !Container.Scrolling">Conditional</animation>
			</control>
			<control type="group">
				<left>1240</left>
				<top>120</top>
				<visible>!Skin.HasSetting(Disable.BannerWallInfo)</visible>
				<control type="image">
					<width>560</width>
					<height>330</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$VAR[GlobalBackgroundVar]</texture>
					<fadetime>300</fadetime>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
				</control>
				<control type="label">
					<top>325</top>
					<width>560</width>
					<height>60</height>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>$VAR[FloorLabelVar]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button">
					<top>370</top>
					<width>559</width>
					<label>$INFO[ListItem.Genre,[COLOR grey],[/COLOR][CR]]$VAR[VideoSubLabelVar]</label>
					<textcolor>$VAR[UnWatchedEpColor]</textcolor>
					<include>DefaultButtonsValues</include>
					<visible>!ListItem.IsCollection</visible>
				</control>
				<control type="button">
					<top>370</top>
					<width>559</width>
					<label>$INFO[Window(Home).Property(Set.Movies.Genre)][CR]$INFO[Window(Home).Property(Set.Movies.Runtime),, $LOCALIZE[12391]]</label>
					<include>DefaultButtonsValues</include>
					<visible>ListItem.IsCollection</visible>
				</control>
				<control type="textbox">
					<label>[COLOR $VAR[ThemeLabelColor]]$INFO[ListItem.Tagline,, - ][/COLOR]$VAR[VideoPlotVar]</label>
					<left>15</left>
					<top>464</top>
					<width>530</width>
					<height>402</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(95861)</autoscroll>
					<pagecontrol>95861</pagecontrol>
					<include>DefaultButtonsValues</include>
				</control>
				<control type="scrollbar" id="95861">
					<left>557</left>
					<top>441</top>
					<width>14</width>
					<height>302</height>
					<onleft>50</onleft>
					<onright>SetProperty(MediaMenu,True,Home)</onright>
					<onright>SetFocus(9050)</onright>
					<ondown>95861</ondown>
					<onup>95861</onup>
					<showonepage>false</showonepage>
					<texturesliderbackground />
					<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				</control>
			</control>
			<control type="group">
				<include content="InfoPopup">
					<param name="StudioLabelID">58</param>
				</include>
				<visible>Skin.HasSetting(Enable.BannerWallInfoPopup) + Control.HasFocus(58) + !ListItem.IsParentFolder</visible>
			</control>
		</control>
	</include>
	<include name="BannerWallInfoWidth">
		<width>1180</width>
	</include>
	<include name="BannerWallNoInfoWidth">
		<width>1680</width>
	</include>
</includes>